<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 50%), url(<%= image_path 'background.jpg' %>);">
  <div class="container login-container">
    <div class="row">
      <div class="col-xs-12">
        <%= image_tag "logo.png" %>
      </div>

      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <div class="panel panel-default", id="signup-box">
          <div class="panel-heading">
            <h3 class="panel-title text-center">Change your password</h3>
          </div>
          <div class="panel-body gray-label">
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Change my password" %>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
