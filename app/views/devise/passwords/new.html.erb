<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 50%), url(<%= image_path 'background.jpg' %>);">
  <div class="container login-container">
    <div class="row">
      <div class="col-xs-12">
        <%= image_tag "logo.png" %>
      </div>

      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <div class="panel panel-default", id="signup-box">
          <div class="panel-heading">
          <h3 class="panel-title text-center">Forgot your password?</h3>
          </div>
          <div class="panel-body gray-label">
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Send me reset password instructions" %>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
