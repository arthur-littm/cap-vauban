<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 50%), url(<%= image_path 'background.jpg' %>);">
  <div class="container login-container">
    <div class="row">
      <div class="col-xs-12 hidden-xs">
        <%= image_tag "logo.png" %>
      </div>

      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <div class="panel panel-default", id="signup-box">
          <div class="panel-heading">
            <h3 class="panel-title text-center"><%= t("devise.sign_up") %></h3>
          </div>

          <div class="panel-body">

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :first_name, required: true, label: false, autofocus: true, placeholder: t("devise.first_name") %>
              <%= f.input :last_name, required: true, label: false, autofocus: true, placeholder: t("devise.last_name") %>
            </div>
            <div class="form-group">
            <%= f.input :phone, required: true, label: false, autofocus: true, placeholder: t("devise.phone") %> %>
            </div>
            <div class="form-group">
              <%= f.input :email, required: true, label: false, autofocus: true, placeholder: "Email" %>
            </div>

            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.input :password, required: true, label: false, placeholder: t("devise.password") %>
                </div>
              </div>

              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group placeholder">
                  <%= f.input :password_confirmation, label: false, placeholder: t("devise.password_confirmation") %>
                </div>
              </div>
            </div>
            <%= f.button :submit, t("devise.sign_up"), class:"btn btn-primary btn-block devise-button" %>
            <% end %>
          </div>
          <%= link_to t("devise.already_account"), new_session_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>
