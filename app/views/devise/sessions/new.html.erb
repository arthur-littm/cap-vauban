
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 50%), url(<%= image_path 'background.jpg' %>);">
  <div class="container login-container">
    <div class="row">
      <div class="col-xs-12">
        <%= image_tag "logo.png" %>
      </div>
      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <div class="panel panel-default", id="signup-box">
          <div class="panel-heading">
            <h3 class="panel-title text-center"><%= t("devise.sign_in") %></h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-12">
                <div class="form-group">
                  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <%= f.input :email, required: false, label: false, autofocus: true, placeholder: "Email" %>
                </div>
              </div>

              <div class="col-xs-12">
                <div class="form-group">
                  <%= f.input :password, required: false, label: false, placeholder: t("devise.password") %>
                  <%= f.input :remember_me, label: t("devise.remember_me"), as: :boolean if devise_mapping.rememberable? %>
                </div>
              </div>
            </div>

            <%= f.button :submit, t("devise.sign_in"), class:"btn btn-primary btn-block devise-button"  %>
            <% end %>
            <br/>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to t("devise.forgot_password"), new_password_path(resource_name) %>
            <% end -%>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
