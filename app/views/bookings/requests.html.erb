<div class="container">
  <h3>Booking requests [<%= @bookings.where(status: "unconfirmed").count %>]</h3>
  <% @bookings.where(status: "unconfirmed").each do |booking| %>
  <div class="product">
    <div class='product-upvote'>
      <div><i class="fa fa-calendar"></i></div>
      <div class='product-count'><%= l(booking.start_date.to_date) %></div>
    </div>
    <% if booking.flat.banner_photo %>
    <%= cl_image_tag booking.flat.banner_photo.path, class: "product-image hidden-xs" %>
    <% else %>
    <%= image_tag "background.jpg", class: "product-image hidden-xs" %>
    <% end %>
    <div class='product-body'>
      <p><%= booking.flat.title %></p>
      <p><%= booking.user.first_name %> <%= booking.user.last_name %></p>
      <p><%= booking.user.email %></p>
      <p><%= booking.message %></p>
      <p><%= l(booking.start_date.to_date) %> - <%= l(booking.end_date.to_date) %></p>
      <p><%= humanized_money_with_symbol(booking.price_cents) %></p>
    </div>
    <div class="request-buttons">
      <%= link_to 'Confirm', booking_status_booking_path(booking), data: { confirm: 'Confirm?' }, method: :patch, class: "btn btn-primary" %>
      <%= link_to 'Cancel', cancelled_booking_booking_path(booking), data: { confirm: 'Cancel?' }, method: :patch, class: "btn btn-danger" %>
    </div>
  </div>
  <% end %>


  <h3>Confirmed bookings [<%= @bookings.where(status: "confirmed").count %>]</h3>
  <% @bookings.where(status: "confirmed").each do |booking| %>
  <div class="product">
    <div class='product-upvote'>
      <div><i class="fa fa-calendar"></i></div>
      <div class='product-count'><%= booking.start_date %></div>
    </div>
    <% if booking.flat.banner_photo %>
    <%= cl_image_tag booking.flat.banner_photo.path, class: "product-image hidden-xs" %>
    <% else %>
    <%= image_tag "background.jpg", class: "product-image hidden-xs" %>
    <% end %>
    <div class='product-body'>
      <p><%= booking.flat.title %></p>
      <p><%= booking.user.first_name %> <%= booking.user.last_name %></p>
      <p><%= booking.user.email %></p>
      <p><%= booking.message %></p>
      <p><%= l(booking.start_date.to_date) %> - <%= l(booking.end_date.to_date) %></p>
      <p><%= humanized_money_with_symbol(booking.price_cents) %></p>
      <% if booking.order.state == "pending"%>
      <p><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> <%= t("booking.not_paid") %></p>
      <% elsif booking.order.state == "paid"%>
      <p><i class="fa fa-check-circle-o" aria-hidden="true"></i> <%= t("booking.paid") %></p>
      <% end %>
    </div>
    <div class="product-button">

    </div>
    <ul class="list-inline product-controls">
      <%= link_to booking_path(booking) do %>
      <li><i class="fa fa-info-circle"></i></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <h3>Cancelled bookings [<%= @bookings.where(status: "cancelled").count %>]</h3>
  <% @bookings.where(status: "cancelled").each do |booking| %>
  <div class="product">
    <div class='product-upvote'>
      <div><i class="fa fa-calendar"></i></div>
      <div class='product-count'><%= booking.start_date %></div>
    </div>
    <% if booking.flat.banner_photo %>
    <%= cl_image_tag booking.flat.banner_photo.path, class: "product-image hidden-xs" %>
    <% else %>
    <%= image_tag "background.jpg", class: "product-image hidden-xs" %>
    <% end %>
    <div class='product-body'>
      <p><%= booking.flat.title %></p>
      <p><%= booking.user.first_name %> <%= booking.user.last_name %></p>
      <p><%= booking.user.email %></p>
      <p><%= booking.message %></p>
      <p><%= l(booking.start_date.to_date) %> - <%= l(booking.end_date.to_date) %></p>
      <p><%= humanized_money_with_symbol(booking.price_cents) %></p>
    </div>
    <div class="product-button">

    </div>
    <ul class="list-inline product-controls">
      <%= link_to booking_path(booking) do %>
      <li><i class="fa fa-info-circle"></i></li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div>
